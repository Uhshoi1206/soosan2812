---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Layout from '../../components/Layout.tsx';
import { getVisibleBlogPosts } from '../../utils/contentCollections';
import { getBlogCategories } from '../../utils/blogCategories';
import { OptimizedImage } from '../../components/ui/optimized-image.tsx';
import CategoryIconDisplay from '../../components/blog/CategoryIconDisplay.tsx';
import { getEntry } from 'astro:content';

export async function getStaticPaths() {
  const { categories } = await getBlogCategories();

  return categories.map(category => ({
    params: { slug: category.data.slug },
    props: { categoryId: category.data.id },
  }));
}

const { slug } = Astro.params;
const { categoryId } = Astro.props;
const { categories, categoryMap, categoryInfoMap, getCategorySlug } = await getBlogCategories();
const allPosts = await getVisibleBlogPosts();
const filteredPosts = allPosts.filter(post => post.category === categoryId);
const categoryName = categoryMap[categoryId] || categoryId;
const categoryInfo = categoryInfoMap[categoryId];
const categorySlug = getCategorySlug(categoryId);

const featuredPost = filteredPosts[0];
const sidePosts = filteredPosts.slice(1, 4);
const allOtherPosts = filteredPosts.slice(4);

const settingsEntry = await getEntry('settings', 'site-settings');
const settings = settingsEntry?.data;
---

<BaseLayout
  title={`${categoryName} | Tin tức ngành vận tải`}
  description={`Xem tất cả bài viết về ${categoryName}`}
>
  <Layout client:load siteSettings={settings}>
    <div class="bg-[#1e3a5f] text-white py-16 mb-12">
      <div class="container mx-auto px-4">
        <nav class="text-sm mb-6">
          <a href="/danh-muc-bai-viet" class="hover:text-gray-300 flex items-center gap-2">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Quay lại Blog
          </a>
        </nav>
        <h1 class="text-4xl md:text-5xl font-bold mb-4">{categoryName}</h1>
        <p class="text-gray-300 max-w-3xl text-lg leading-relaxed">
          {categoryInfo?.description || `Cập nhật các tin tức mới nhất về ${categoryName.toLowerCase()}, xu hướng thị trường và các bài chuyên sâch trong ngành vận tải.`}
        </p>
      </div>
    </div>

    <div class="container mx-auto px-4">
      {filteredPosts.length > 0 ? (
        <>
          {featuredPost && (
            <section class="mb-16">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl md:text-3xl font-bold text-gray-900">Bài Viết Nổi Bật</h2>
              </div>

              <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
                <div class="lg:col-span-6">
                  <a href={`/danh-muc-bai-viet/${categorySlug}/${featuredPost.slug}`} class="group block h-full">
                    <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 h-full flex flex-col">
                      {featuredPost.images && featuredPost.images[0] && (
                        <div class="relative aspect-[16/10] overflow-hidden">
                          <span class="absolute top-4 left-4 bg-red-500 text-white text-xs px-3 py-1 rounded font-medium z-10">
                            Mới nhất
                          </span>
                          <OptimizedImage
                            client:load
                            src={featuredPost.images[0]}
                            alt={featuredPost.title}
                            className="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                            useCase="gallery"
                          />
                        </div>
                      )}
                      <div class="p-6 flex-grow flex flex-col">
                        <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors line-clamp-2">
                          {featuredPost.title}
                        </h3>
                        <p class="text-gray-600 mb-4 line-clamp-3 flex-grow">
                          {featuredPost.description}
                        </p>
                        <div class="flex items-center gap-4 text-sm text-gray-500 pt-4 border-t border-gray-100">
                          <span class="flex items-center gap-1">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            Nguyễn Minh Tuấn
                          </span>
                          <span class="flex items-center gap-1">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            {new Date(featuredPost.publishDate).toLocaleDateString('vi-VN')}
                          </span>
                          <span class="flex items-center gap-1">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                            {featuredPost.views || '0'} phút
                          </span>
                        </div>
                      </div>
                    </div>
                  </a>
                </div>

                <div class="lg:col-span-6 space-y-4">
                  {sidePosts.map((post) => (
                    <a
                      key={post.slug}
                      href={`/danh-muc-bai-viet/${categorySlug}/${post.slug}`}
                      class="group block"
                    >
                      <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-all duration-300 flex gap-4">
                        {post.images && post.images[0] && (
                          <div class="w-32 sm:w-40 flex-shrink-0">
                            <div class="relative aspect-square overflow-hidden">
                              <OptimizedImage
                                client:load
                                src={post.images[0]}
                                alt={post.title}
                                className="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                useCase="thumbnail"
                              />
                            </div>
                          </div>
                        )}
                        <div class="flex-1 py-4 pr-4 flex flex-col justify-center">
                          <h3 class="font-bold text-gray-900 line-clamp-2 group-hover:text-primary transition-colors mb-2">
                            {post.title}
                          </h3>
                          <div class="flex items-center gap-3 text-xs text-gray-500">
                            <span class="flex items-center gap-1">
                              <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                              </svg>
                              {new Date(post.publishDate).toLocaleDateString('vi-VN')}
                            </span>
                            <span class="flex items-center gap-1">
                              <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                              </svg>
                              {post.views || '0'} phút
                            </span>
                          </div>
                        </div>
                      </div>
                    </a>
                  ))}
                </div>
              </div>
            </section>
          )}

          {allOtherPosts.length > 0 && (
            <section class="mb-16">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl md:text-3xl font-bold text-gray-900">Tất Cả Bài Viết</h2>
                <p class="text-sm text-gray-600">Hiển thị {allOtherPosts.length} / {filteredPosts.length}</p>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {allOtherPosts.map((post) => (
                  <a
                    key={post.slug}
                    href={`/danh-muc-bai-viet/${categorySlug}/${post.slug}`}
                    class="group block"
                  >
                    <article class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-all duration-300 h-full flex flex-col">
                      {post.images && post.images[0] && (
                        <div class="relative aspect-[16/10] overflow-hidden">
                          <OptimizedImage
                            client:load
                            src={post.images[0]}
                            alt={post.title}
                            className="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                            useCase="thumbnail"
                          />
                        </div>
                      )}
                      <div class="p-5 flex-grow flex flex-col">
                        <div class="flex items-center gap-3 text-xs text-gray-500 mb-3">
                          <span class="flex items-center gap-1">
                            <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            {new Date(post.publishDate).toLocaleDateString('vi-VN')}
                          </span>
                          <span class="flex items-center gap-1">
                            <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                            {post.views || '0'} phút
                          </span>
                        </div>
                        <h3 class="font-bold text-gray-900 mb-2 group-hover:text-primary transition-colors line-clamp-2">
                          {post.title}
                        </h3>
                        <p class="text-gray-600 text-sm line-clamp-2 flex-grow">
                          {post.description}
                        </p>
                        <div class="mt-3 pt-3 border-t border-gray-100">
                          <span class="text-xs text-primary font-medium flex items-center gap-1">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                            </svg>
                            {categoryName}
                          </span>
                        </div>
                      </div>
                    </article>
                  </a>
                ))}
              </div>
            </section>
          )}

          <section class="mb-16">
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 text-center mb-8">Khám Phá Danh Mục Khác</h2>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-4">
              {categories.filter(cat => cat.data.id !== categoryId).map((category) => (
                <a
                  key={category.data.id}
                  href={`/danh-muc-bai-viet/${category.data.slug || category.data.id}`}
                  class="group flex flex-col items-center justify-center p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-all duration-300 hover:scale-105"
                >
                  <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-3 group-hover:bg-primary group-hover:text-white transition-colors">
                    <CategoryIconDisplay client:load categoryId={category.data.id} className="h-8 w-8" />
                  </div>
                  <span class="text-sm font-medium text-gray-900 text-center group-hover:text-primary transition-colors">
                    {category.data.name}
                  </span>
                </a>
              ))}
            </div>
          </section>
        </>
      ) : (
        <div class="bg-white rounded-lg shadow-sm p-12 text-center">
          <div class="text-gray-400 mb-4">
            <svg class="h-16 w-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Chưa có bài viết nào</h3>
          <p class="text-gray-600 mb-6">Danh mục này chưa có bài viết. Vui lòng quay lại sau.</p>
          <a href="/danh-muc-bai-viet" class="inline-block bg-primary text-white px-6 py-3 rounded-lg hover:bg-primary/90 transition">
            Xem tất cả danh mục
          </a>
        </div>
      )}
    </div>
  </Layout>
</BaseLayout>
